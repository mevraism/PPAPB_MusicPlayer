        <shape android:shape="rectangle">
            <solid android:color="@color/yellow"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/yellow" />
                <size android:height="2dp" />
            </shape>
        </clip>
    </item>
</layer-list>